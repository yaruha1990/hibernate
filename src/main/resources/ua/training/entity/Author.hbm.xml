<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="ua.training.entity.Author" table="author">
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <property name="movieDescription" column="movie_description"/>
        
        <set name="movies" table="movie" cascade="all" fetch="join">
            <key column="description" property-ref="movieDescription"></key>
            <one-to-many class="ua.training.entity.Movie" />
        </set>
    </class>

</hibernate-mapping>